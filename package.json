{
  "version": "0.1.10",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "release": "standard-version",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "vercel-build": "npx typedoc src/index.ts"
  },
  "peerDependencies": {
    "fastest-validator": "*",
    "joi": "*",
    "next": ">=9",
    "yup": "*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "next-validations",
  "author": "Huynh Duc Dung",
  "repository": {
    "type": "git",
    "url": "https://github.com/jellydn/next-validations"
  },
  "keywords": [
    "nextjs",
    "validation",
    "next-validation",
    "yup",
    "joi",
    "fastest-validator"
  ],
  "module": "dist/next-validations.esm.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/next-validations.esm.js"
    }
  },
  "size-limit": [
    {
      "path": "dist/next-validations.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/next-validations.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "6.0.4",
    "@skypack/package-check": "0.2.2",
    "@testing-library/jest-dom": "5.15.0",
    "@testing-library/react": "12.1.2",
    "@types/jest": "27.0.2",
    "@types/react": "17.0.34",
    "@types/react-dom": "17.0.11",
    "fastest-validator": "1.12.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "joi": "17.4.2",
    "next": "12.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "size-limit": "6.0.4",
    "standard-version": "9.3.2",
    "tsdx": "0.14.1",
    "tslib": "2.3.1",
    "typedoc": "0.22.9",
    "typescript": "4.4.4",
    "yup": "0.32.11",
    "zod": "3.11.6"
  }
}
